<h1>Create a task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title, value: 'Title' %>
  <%=f.text_field :title %>
  <br>
  <%= f.label :details, value: 'Description' %>
  <%= f.text_field :details %>
  <br>
  <%= f.label :title, value: 'Completed?' %>
  <%= f.text_field :completed %>
  <br>
  <%= f.submit %>
  <br>
  <%= link_to 'Backs to tasks', tasks_path %>
<% end %>
